<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <title>KingUni Wiki</title>
        <link href="/stylesheets/site.css" type="text/css" rel="stylesheet">
        {{!-- <link rel='shortcut icon' type='image/x-icon' href='/images/logo.png' /> --}}
    </head>

    <body>
        <div>   
            {{>sidebar}}
                <div id="container">
                    {{#if loggedInUser}}
                        {{>headerAuth}}
                    {{else}}
                        {{>headerNoAuth}}
                    {{/if}}
    
                    {{#if errors}}        
                        <div id="notifications">
                            {{#each errors}}
                                <p id="notification-message">{{this}}</p>
                            {{/each}}
                        </div>
                    
       
                    {{/if}}
                    {{{body}}}
                    {{>footer}}
                </div>
        </div>
    
    </body>

</html>